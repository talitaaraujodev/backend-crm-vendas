generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Agent {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  name      String      @unique
  status    AgentStatus @default(ACTIVE)
  customers Customer[]

  @@map("agents")
}

model Customer {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String         @unique
  phone     String
  address   Json
  status    CustomerStatus @default(WAITING_ATTENDANCE)
  agentId   String         @db.ObjectId
  agent     Agent          @relation(fields: [agentId], references: [id])
  saleValue Float

  @@map("customers")
}

enum AgentStatus {
  ACTIVE
  INACTIVE
}

enum CustomerStatus {
  WAITING_ATTENDANCE
  IN_ATTENDANCE
  PROPOSAL_MADE
  NOT_CONCLUDED
  SOLD
}
